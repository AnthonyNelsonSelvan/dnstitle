options {
    directory "/var/cache/bind";

    recursion yes;
    allow-recursion { 127.0.0.1; 172.20.0.0/24; };

    allow-query { any; };

    allow-query-cache { none; };

    listen-on { any; };

    forwarders { 
        8.8.8.8;
        1.1.1.1;
    };

    allow-transfer { none; };

    rate-limit {
        responses-per-second 5;
    };
};